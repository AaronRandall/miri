#!/usr/bin/env ruby

require File.expand_path('../../lib/miri', __FILE__)

miri = Miri::Agent.new()

MAX_ATTEMPTS=2
translated_text = ""
current_attempt = 1

translated_text = "tell me about eric clapton"
#translated_text = "play a track by the rolling stones"
#translated_text = "what is my next gig"
#translated_text = "what is the largest mammal on earth"

while translated_text == "" && current_attempt <= MAX_ATTEMPTS
  audio_file      = miri.capture_audio()
  translated_text = miri.translate_to_text(audio_file)
  current_attempt += 1
end

action_result = miri.perform_action(translated_text)
